<h1>Sign In</h1>

<%= form_with url: session_path, method: :post do |form| %>
  <div class="field">
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Log In" %>
  </div>

  <%= link_to "Forgot your password?", new_password_reset_path %>
<% end %>